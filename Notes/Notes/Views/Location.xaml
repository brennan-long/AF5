<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.Views.Location"
             Title="Location"       >
    <Grid RowDefinitions="100"
           BackgroundColor="Red">
       <Picker Title=" Select A Location"
                    TitleColor="White"
                    TextColor="White"
                VerticalOptions="Start"
                FontSize="22">
            <Picker.Items>            
                <x:String>Select</x:String>
                <x:String>Robins Air Force Base</x:String>
                <x:String>Hill Air Force Base</x:String>
                <x:String>Tinker Air Force Base</x:String>
                <x:String>Shaw Air Force Base</x:String>
                <x:String>Hartsfield-Jackson Atlanta International Airport</x:String>            
            </Picker.Items>
        </Picker>

        

        <Picker Title=" Select A Runway"
                    TitleColor="White"
                    TextColor="White"
                VerticalOptions="End"
                FontSize="22"
                     >
            <Picker.Items>
                <x:String>Select</x:String>
                <x:String>C-5</x:String>
                <x:String>C-17</x:String>
                <x:String>C-130</x:String>
                <x:String>F-15</x:String>
                <x:String>E-8</x:String>
            </Picker.Items>
        </Picker>



        <StackLayout Grid.Row="1"
                     Margin="10"
                     Spacing="15"
                     BackgroundColor="White">
            <Label FontSize="22">             
            </Label>
       </StackLayout>
    </Grid>
</ContentPage>

    
    