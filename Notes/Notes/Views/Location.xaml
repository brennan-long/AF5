<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.Views.Location"
             Title="Location"       >
    <Grid RowDefinitions="100"
           BackgroundColor="Red">
        <Picker Title=" Select A Location"
                TitleColor="White"
                TextColor="White"
                VerticalOptions="Start"
                FontSize="22"
               x:Name=" locationPicker"
               SelectedIndexChanged="locationPicker_SelectedIndexChanged"/>

        <Picker Title=" Select A Runway"
                TitleColor="White"
                TextColor="White"
                VerticalOptions="End"
                FontSize="22">
            <Picker.Items>
                <x:String>Select</x:String>
                <x:String>C-5</x:String>
                <x:String>C-17</x:String>
                <x:String>C-130</x:String>
                <x:String>F-15</x:String>
                <x:String>E-8</x:String>
            </Picker.Items>
        </Picker>

        <StackLayout Grid.Row="1"
                     Margin="10"
                     Spacing="15"
                     BackgroundColor="White">
            <Label Text="Location:" 
                FontSize="19">             


            </Label>
            <Label Text="Temperature:" 
                FontSize="19">
            </Label>
            <Label Text="Wind Speed:" 
                FontSize="19">
            </Label>
            <Label Text="Runway Name:" 
                FontSize="19">
            </Label>
            <Label Text="Runway Dimensions:" 
                FontSize="19">
            </Label>
            <Label Text="Runway Elevation:" 
                FontSize="19">
            </Label>

        </StackLayout>
    </Grid>
</ContentPage>

    
    